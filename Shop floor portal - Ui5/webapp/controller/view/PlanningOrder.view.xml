<mvc:View
  controllerName="SHOP_FLOOR.controller.PlanningOrder"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  displayBlock="true">

  <Page title="Planning Orders" class="sapUiContentPadding">
    <content>
      <VBox>
        <!-- Header Toolbar -->
        <Toolbar>
          <Title text="Planning Orders" level="H2"/>
          <ToolbarSpacer/>

          <!-- Month Filter -->
          <Label text="Month" class="sapUiSmallMarginEnd"/>
          <Select id="monthSelect" change=".onFilterChange">
            <items>
              <core:Item key="" text="All"/>
              <core:Item key="01" text="January"/>
              <core:Item key="02" text="February"/>
              <core:Item key="03" text="March"/>
              <core:Item key="04" text="April"/>
              <core:Item key="05" text="May"/>
              <core:Item key="06" text="June"/>
              <core:Item key="07" text="July"/>
              <core:Item key="08" text="August"/>
              <core:Item key="09" text="September"/>
              <core:Item key="10" text="October"/>
              <core:Item key="11" text="November"/>
              <core:Item key="12" text="December"/>
            </items>
          </Select>

          <!-- Year Filter -->
          <Label text="Year" class="sapUiSmallMarginBegin sapUiSmallMarginEnd"/>
          <Select id="yearSelect" change=".onFilterChange">
            <items>
              <core:Item key="" text="All"/>
              <core:Item key="2024" text="2024"/>
              <core:Item key="2025" text="2025"/>
              <core:Item key="2026" text="2026"/>
            </items>
          </Select>

          <!-- Apply Button -->
          <Button text="Apply" icon="sap-icon://filter" press=".onApplyFilters"/>

          <!-- Sort Button -->
          <Button icon="sap-icon://sort" press=".onSort" tooltip="Sort by Start Date"/>
        </Toolbar>

        <!-- Planning Orders Table -->
        <Table id="planningOrderTable"
               noDataText="No records found"
               items="{planOrders>/}">
          <columns>
            <Column><Text text="Order Number"/></Column>
            <Column><Text text="Material"/></Column>
            <Column><Text text="Plant"/></Column>
            <Column><Text text="Prod. Plant"/></Column>
            <Column><Text text="Planned Qty"/></Column>
            <Column><Text text="Available Qty"/></Column>
            <Column><Text text="Start Date"/></Column>
            <Column><Text text="End Date"/></Column>
            <Column><Text text="Requirement Date"/></Column>
            <Column><Text text="MRP Controller"/></Column>
            <Column><Text text="Order Type"/></Column>
            <Column><Text text="Procurement Type"/></Column>
            <Column><Text text="Special Procurement"/></Column>
          </columns>

          <items>
            <ColumnListItem>
              <cells>
                <Text text="{planOrders>Plnum}"/>
                <Text text="{planOrders>Matnr}"/>
                <Text text="{planOrders>Plwrk}"/>
                <Text text="{planOrders>Pwwrk}"/>
                <Text text="{planOrders>Gsmng}"/>
                <Text text="{planOrders>Avmng}"/>
                <Text text="{path:'planOrders>Psttr', formatter:'.formatter.formatDate'}"/>
                <Text text="{path:'planOrders>Pedtr', formatter:'.formatter.formatDate'}"/>
                <Text text="{path:'planOrders>Pertr', formatter:'.formatter.formatDate'}"/>
                <Text text="{planOrders>Dispo}"/>
                <Text text="{planOrders>Paart}"/>
                <Text text="{planOrders>Beskz}"/>
                <Text text="{planOrders>Sobes}"/>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </VBox>
    </content>
  </Page>
</mvc:View>